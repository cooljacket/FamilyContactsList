<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <hw.happyjacket.com.familycontactlist.myphonebook.listview.ScrollListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_option2_listview"
                android:layout_alignParentTop="true">
            </hw.happyjacket.com.familycontactlist.myphonebook.listview.ScrollListView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_option2_listview"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_option2_negative"
                    android:text="取消"
                    android:background="@color/white"
                    android:textColor="@color/button_text_selector"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/dialog_option2_listview"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="5dp"/>


                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_option2_positive"
                    android:text="确定"
                    android:background="@color/white"
                    android:textColor="@color/button_text_selector"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/dialog_option2_listview"/>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
