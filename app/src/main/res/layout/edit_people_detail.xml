<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#EFEFEF"
        android:orientation="horizontal"
        android:gravity="top"
        >

        <ImageButton
            android:id="@+id/btn_back"
            android:background="@drawable/return_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            ></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="编辑联系人"
            android:gravity="center_vertical"

            />



    </LinearLayout>

    <ScrollView
        android:layout_marginTop="49dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:background="#00000000"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00000000"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                >
                <ImageButton
                    android:id="@+id/btn_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#00000000"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    >

                </ImageButton>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:id="@+id/et_name"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:hint="姓名"
                        android:textColorHint="#C0C0C0"
                        />
                    <EditText
                        android:layout_width="220dp"
                        android:layout_height="0.7dp"
                        android:background="@drawable/vertical_divider"
                        />


                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:id="@+id/et_familyName"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:hint="昵称"
                        android:textColorHint="#C0C0C0"

                        />
                    <EditText
                        android:layout_width="220dp"
                        android:layout_height="0.7dp"
                        android:background="@drawable/vertical_divider"
                        />




                </LinearLayout>

            </LinearLayout>



            <hw.happyjacket.com.familycontactlist.myphonebook.listview.ScrollListView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people_info">
            </hw.happyjacket.com.familycontactlist.myphonebook.listview.ScrollListView>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:id="@+id/edit_group"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="0dp"
                >
                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"

                    android:layout_height="40dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:background="#00000000"
                        android:text="群组"
                        android:textSize="16dp"

                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:singleLine="true"
                        android:id="@+id/groupname"
                        android:background="#00000000"
                        android:gravity="center_vertical"
                        android:textColor="#b0b0b0"
                        android:text="aaa"
                        android:textSize="16dp"


                        />

                </LinearLayout>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:drawableRight="@drawable/button_down"

                    />
            </LinearLayout>


            <TextView
                android:layout_width="320dp"
                android:layout_height="0.8dp"
                android:background="@drawable/vertical_divider"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:textColor="#84CA8B"
                android:text="添加新项目"
                android:id="@+id/add_info"
                android:background="#00000000"


                />
            <TextView
                android:layout_width="320dp"
                android:layout_height="0.8dp"
                android:background="@drawable/vertical_divider"
                android:layout_gravity="center_horizontal"
                />



        </LinearLayout>

    </ScrollView>


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#F0F0F0"

        >

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#84CA8B"
            android:background="#F0F0F0"
            android:text="取消"
            android:textSize="20dp"
            android:layout_gravity="bottom"
            ></Button>


        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textColor="#84CA8B"
            android:background="#F0F0F0"
            android:text="确定"
            android:textSize="20dp"
            android:layout_gravity="bottom"
            ></Button>

    </LinearLayout>





</RelativeLayout>