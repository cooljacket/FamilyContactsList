<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/change_people_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <ScrollView
        android:id="@+id/people_info_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/change_people_toolbar"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageButton
                        android:id="@+id/btn_img"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="#00000000"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="20dp">
                    </ImageButton>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_name"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="#00000000"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:hint="姓名"
                            android:textColorHint="#C0C0C0" />

                        <EditText
                            android:layout_width="220dp"
                            android:layout_height="0.8dp"
                            android:background="@drawable/vertical_divider"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_familyName"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="#00000000"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:hint="昵称"
                            android:textColorHint="#C0C0C0" />
                        <EditText
                            android:layout_width="220dp"
                            android:layout_height="0.8dp"
                            android:background="@drawable/vertical_divider" />

                    </LinearLayout>

                </LinearLayout>



                <hw.happyjacket.com.familycontactlist.myphonebook.listview.ScrollListView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"
                    android:dividerHeight="0dp"
                    android:id="@+id/people_info">
                </hw.happyjacket.com.familycontactlist.myphonebook.listview.ScrollListView>


                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:id="@+id/edit_group"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="14dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/group_name_head"
                        android:gravity="left"
                        android:focusable="false"
                        android:clickable="false"
                        android:text="群组"
                        android:textSize="17dp" />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/group_name_head"
                        android:singleLine="true"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/group_name"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:textColor="#b0b0b0"
                        android:textSize="16dp"
                        android:text="" />
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/group_name_button"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:drawableRight="@drawable/button_down"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



                <TextView
                    android:layout_width="320dp"
                    android:layout_height="0.8dp"
                    android:background="@drawable/vertical_divider"
                    android:layout_gravity="center_horizontal" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16dp"
                    android:textColor="#84CA8B"
                    android:text="添加新项目"
                    android:id="@+id/add_info"
                    android:background="@drawable/button_selector" />
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="0.8dp"
                    android:background="@drawable/vertical_divider"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/green"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#84CA8B"
            android:background="#F0F0F0"
            android:text="取消"
            android:textSize="20dp"
            android:layout_gravity="bottom" />


        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#84CA8B"
            android:background="#F0F0F0"
            android:text="确定"
            android:textSize="20dp"
            android:layout_gravity="bottom" />

    </LinearLayout>

</RelativeLayout>