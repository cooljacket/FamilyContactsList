<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <hw.happyjacket.com.familycontactlist.myphonebook.listview.ScrollListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_option_listview"
                android:layout_alignParentTop="true">
            </hw.happyjacket.com.familycontactlist.myphonebook.listview.ScrollListView>

            <TextView
                android:layout_width="320dp"
                android:layout_height="0.8dp"
                android:background="@drawable/vertical_divider"
                android:id="@+id/divider1"
                android:layout_below="@id/dialog_option_listview"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_dialog_option"
                android:background="@color/white"
                android:textColor="@color/button_text_selector"
                android:layout_below="@id/divider1"
                />
            <TextView
                android:layout_width="320dp"
                android:layout_height="0.8dp"
                android:background="@drawable/vertical_divider"
                android:id="@+id/divider2"
                android:layout_below="@id/new_dialog_option"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:orientation="horizontal">



                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_option_negative"
                    android:text="取消"
                    android:background="@color/white"
                    android:textColor="@color/button_text_selector"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/new_dialog_option"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="5dp"/>


                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/dialog_option_delete"
                    android:text="删除"
                    android:background="@color/white"
                    android:textColor="@color/button_text_selector"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/new_dialog_option"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_option_positive"
                    android:text="确定"
                    android:background="@color/white"
                    android:textColor="@color/button_text_selector"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/new_dialog_option"/>



            </LinearLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
