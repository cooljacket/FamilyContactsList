<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CallLog_Button_Focus" parent="Base.Animation.AppCompat.DropDownUp">
        <item name="android:background">@drawable/buttononfocus</item>
        <item name="android:textColor">@color/button_color_highlight</item>
    </style>

    <style name="CallLog_Button" parent="Base.Animation.AppCompat.DropDownUp">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/button_color</item>
    </style>

    <style name="Menu" parent="@style/AlertDialog.AppCompat.Light">
        <!-- 背景透明 -->
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <style name="ActionSheetDialogAnimation" parent="@style/AlertDialog.AppCompat.Light">
        <item name="android:windowEnterAnimation">@anim/up</item>
        <item name="android:windowExitAnimation">@anim/down</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTop" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--We use this!!-->
    <style name="AppMainTop" parent="@style/Theme.AppCompat.Light">
        <!--<item name="android:actionBarStyle">@style/Theme.AppCompat.Light</item>-->

        <!-- colorPrimary 定义 ActionBar 的背景色 -->
        <item name="colorPrimary">@color/bar_blue</item>

        <!-- colorAccent 为 colorControlActivated 的默认值，该值用户显示控件的高亮状态 -->
        <!--<item name="colorAccent">@color/light_red</item>-->

        <!-- colorPrimaryDark 定义状态栏的背景色 不要动这个-->
        <!--<item name="colorPrimaryDark">@color/bar_blue</item>-->
        <item name="android:actionBarSize">50dip</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/tab_bk_light_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/bar_blue</item>
    </style>      <!-- ActionBar字体 -->





</resources>
