<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CallLog_Button_Focus" parent="Base.Animation.AppCompat.DropDownUp">
        <item name="android:background">@drawable/buttononfocus</item>
        <item name="android:textColor">@color/button_color_highlight</item>
    </style>

    <style name="CallLog_Button" parent="Base.Animation.AppCompat.DropDownUp">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/button_color</item>
    </style>

</resources>
